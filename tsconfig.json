{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Ambiente */
    "module": "commonjs",            // ou "esnext" se quiser usar ESM puro
    "target": "es2020",              // ES mais novo que Node suporta
    "lib": ["es2020"],               // APIs dispon√≠veis no ambiente
    "types": ["node"],               // inclui tipos do Node

    /* Mapas e tipagens */
    "sourceMap": true,
    "declaration": true,             // gera arquivos .d.ts
    "declarationMap": true,

    /* Regras mais seguras */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Outros */
    "esModuleInterop": true,         // permite import default de libs CommonJS
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
